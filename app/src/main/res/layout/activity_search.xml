<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_text">

    <include layout="@layout/layout_search"/>

    <RelativeLayout
        android:id="@+id/rl_history"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/img_tag"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@mipmap/search_tag"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/img_tag"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:text="历史搜索"
            android:textColor="@color/text_dark99"/>

        <ImageView
            android:id="@+id/img_clear"
            android:layout_width="19dp"
            android:layout_height="20dp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/clear_history"/>
    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/search_line"/>


    <com.colpencil.secondhandcar.Ui.FlowTag.FlowTagLayout
        android:id="@+id/fl_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>

    <RelativeLayout
        android:id="@+id/rl_hot"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/img_hot"
            android:layout_width="16dp"
            android:layout_height="14dp"
            android:src="@mipmap/search_hot"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/img_hot"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:text="热门搜索"
            android:textColor="@color/text_dark99"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/search_line"/>

    <com.property.colpencil.colpencilandroidlibrary.Ui.ColpencilGridView
        android:id="@+id/grid_hot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:horizontalSpacing="12dp"
        android:verticalSpacing="15dp"
        android:numColumns="3"/>
</LinearLayout>