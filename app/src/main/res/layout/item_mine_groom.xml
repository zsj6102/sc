<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp">

        <ImageView
            android:id="@+id/img_car"
            android:layout_width="110dp"
            android:layout_height="82dp"
            android:src="@mipmap/holder"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/img_tag"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:visibility="visible"
            android:src="@mipmap/new_car"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginRight="10dp"
                android:textColor="@color/text_dark33"
                android:maxLines="2"
                android:ellipsize="end"
                android:maxEms="20"
                android:text="哈哈哈嘎嘎嘎瓜瓜瓜嘻嘻嘻啦啦啦哈哈哈嘎嘎嘎瓜瓜瓜嘻嘻嘻啦啦啦"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/text_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#999999"
                android:text="2016年11月"/>

            <TextView
                android:id="@+id/text_km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text_age"
                android:layout_marginLeft="10dp"
                android:textSize="11sp"
                android:textColor="#999999"
                android:text="7.9万公里"/>

            <TextView
                android:id="@+id/text_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textSize="11sp"
                android:textColor="#999999"
                android:text="厦门"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginRight="12dp"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/tv_ma"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:textColor="@color/text_red"
                android:text="43.5万"/>

            <ImageView
                android:id="@+id/tv_statue"
                android:layout_width="30dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_ma"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/urgent_sale"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>