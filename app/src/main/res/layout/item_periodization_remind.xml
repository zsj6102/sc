<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="102dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical">
        
        <ImageView
            android:id="@+id/img_remind"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/remind"/>
        <TextView
            android:id="@+id/text_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_remind"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:textColor="@color/text_dark33"
            android:text="亲，您的分期购车已经待付款期了，快去看看吧."/>
    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/img_"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/text_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:textSize="13sp"
                android:textColor="@color/text_dark33"
                android:text="您的分期购车订单编号为：45645的支付时间2017年3月13日还有3天就到付款时间了，去支付吧。"/>

            <TextView
                android:id="@+id/text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/text_content"
                android:layout_alignParentRight="true"
                android:text="2017-3-10"
                android:textColor="@color/text_dark33"
                android:textSize="12sp"/>
        </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/main_bg"/>
</LinearLayout>