<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_text">

    <LinearLayout
        android:id="@+id/ll_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/title_color"
            android:gravity="center"
            android:weightSum="11">

            <LinearLayout
                android:id="@+id/ll_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:src="@mipmap/back" />

                <TextView
                    android:id="@+id/tv_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:text="返回"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:visibility="invisible" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center"
                android:text="标题"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <RelativeLayout
                android:id="@+id/ll_rigth"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <TextView
                    android:id="@+id/tv_rigth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:text="修改"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/divide"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_head"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/login_text"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="left"
                    android:text="姓      名："
                    android:textColor="@color/text_dark33"
                    android:textColorHint="@color/text_dark33"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="请填写您的真实姓名"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:textColor="@color/home_new_car" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/main_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="left"
                    android:text="手机号码："
                    android:textColor="@color/text_dark33"
                    android:textColorHint="@color/text_dark33"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/et_tel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="请填写手机号"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:textColor="@color/home_new_car" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/main_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="left"
                    android:text="银      行："
                    android:textColor="@color/text_dark33"
                    android:textColorHint="@color/text_dark33"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/et_bank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="请填写银行"
                    android:layout_marginLeft="10dp"
                    android:textSize="13sp"
                    android:singleLine="true"
                    android:textColor="@color/home_new_car" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/main_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="left"
                    android:text="开 户 行："
                    android:textColor="@color/text_dark33"
                    android:textColorHint="@color/text_dark33"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/et_bank_"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="请填写银行卡开户行"
                    android:layout_marginLeft="10dp"
                    android:textSize="13sp"
                    android:singleLine="true"
                    android:textColor="@color/home_new_car" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/main_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="left"
                    android:text="银行卡号："
                    android:textColor="@color/text_dark33"
                    android:textColorHint="@color/text_dark33"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/et_bank_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="请填写银行卡号"
                    android:layout_marginLeft="10dp"
                    android:textSize="13sp"
                    android:singleLine="true"
                    android:textColor="@color/home_new_car" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/main_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="left"
                    android:text="身份证号："
                    android:textColor="@color/text_dark33"
                    android:textColorHint="@color/text_dark33"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/et_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="请填写身份证号"
                    android:layout_marginLeft="10dp"
                    android:textSize="13sp"
                    android:singleLine="true"
                    android:textColor="@color/home_new_car" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/main_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical"
                android:background="@color/login_text"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="推荐人邀请码："
                    android:textColor="@color/text_dark33"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/et_invite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="请填写邀请码"
                    android:layout_marginLeft="10dp"
                    android:textSize="13sp"
                    android:singleLine="true"
                    android:textColor="@color/home_new_car" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>